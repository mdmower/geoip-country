{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": ["prettier", "plugin:jsdoc/recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["jsdoc", "prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-undef": "error",
    "no-var": "error",
    "jsdoc/check-syntax": 1,
    "jsdoc/newline-after-description": 0,
    "jsdoc/require-returns-description": 0,
    "jsdoc/check-types": [
      2,
      {
        "noDefaults": true
      }
    ]
  },
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  },
  "root": true
}
